doctype html
html
  head
    title= "Login page"
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous")
    script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous")  

    link(href="stylesheets/style.css", rel="stylesheet", type="text/css")
  body
    block content
    
        div(class = "mainContent")  
            form(action="/login", method="post", class="formSignIn")
                h3 Please Sign In
                br
                label(for="username") Username:
                input(type="text", name="username", class="formDataFields")
                label(for="pasword") Password:
                input(type="password", name="password", class="formDataFields")
                br
                button(type="submit", name="login", value="Login") Login